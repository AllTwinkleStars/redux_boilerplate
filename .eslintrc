{
  "parser": "babel-eslint",
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },
  "globals": {
    "connect": true,
    "__CLIENT__": true,
    "__DEVELOPMENT__": true,
    "__PRODUCTION__": true,
    "expect": true
  },
  "rules": {
    "max-len": 0,
    "no-console": 0,
    "no-unused-expressions": 0,
    "no-param-reassign": 0,
    "no-unneeded-ternary": 0,
    "arrow-body-style": 0,
    "react/jsx-no-bind": 0,
    "default-case": 0,
    "prefer-template": 0,
    "padded-blocks": 0,
    "camelcase": 0,
    "no-else-return": 0,
    "func-names": 0,
    "consistent-return": 0,
    "array-callback-return": 0,
    "no-confusing-arrow": 0,
    "no-case-declaration": 0,
    "react/jsx-closing-bracket-location": 0,
    "react/react-in-jsx-scope": 0,
    "no-empty": 0,
    "react/prefer-stateless-function": 0,
    "no-nested-ternary": 0,
    "no-did-update-set-state": 0
  },
  "plugins": [
    "react"
  ]
}
